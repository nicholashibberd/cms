<div id="articles_archive">
	<h2><%= category.name %> Archive</h2>
	<% (0..11).each do |number_of_months| %>
		<% month = (Date.today - number_of_months.months) %>
			<% unless page.articles(month.strftime('%m-%Y')).empty? %>				
			<div class="articles_archive_month">
				<%= link_to (l month, :format => :month_name_year), artilces_path(:month => (l month, :format => :month_year)) %>
			</div>
		<% end %>
	<% end %>
</div>