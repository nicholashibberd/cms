<div class="new_instance_link">
	<%= link_to 'New Navigation Menu', new_nav_menu_path %>
</div>

<h1>Navigation Menus</h1>

<% @nav_menus.each do |nav_menu| %>
	<div class="index_item page_index_item">
		<div class="controls">
			<%= link_to 'Edit', nav_menu_nav_items_path(nav_menu) %>
			<%= link_to 'Delete', nav_menu_path(nav_menu), :method => :delete, :confirm => 'Are you sure?' %>			
		</div>
		<%= link_to nav_menu.name, nav_menu_nav_items_path(nav_menu) %>
	</div>
<% end %>