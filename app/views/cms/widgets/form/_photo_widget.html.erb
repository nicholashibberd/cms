<div class="field">
  <%= f.label :caption %><br />
  <%= f.text_field :caption %>
</div>

<div class="field">
  <%= f.label :display_in_lightbox %><br />
  <%= f.select :display_in_lightbox, options_for_select([['Yes', true], ['No', false]], widget.display_in_lightbox) %>
</div>

<div class="field">
  <%= f.label :width %><br />
  <%= f.text_field :width %>
</div>

<div class="field">
  <%= f.label :choose_photo %><br />
	<% Photo.all.each do |photo| %>
   <div class="photo_widget_form_item">
		<div class="photo_widget_form_item_details">
	    <%= label_tag photo.caption %><br />
			<%= radio_button_tag 'photo_widget[photo_id]', photo.id, widget.photo == photo %>
		</div>
		<%= image_tag photo.cover_image.thumb('x100').url %><br />
   </div>
	<% end %>
	<div class="spacer"></div>
</div>