<div class="widget events_widget" id="<%= widget.css_id %>">
	<h2><%= widget.name %></h2>
	<% Event.grouped_by_day(widget.event_category, widget.group).first(widget.number_to_display).each do |day, events| %>
		<div class='event_day'>
			<%= date_icon(day).html_safe %>
			<% events.each do |event| %>
				<div class="event_widget_event">
					<div class="event_name">
						<a data-toggle="modal" href="#event_<%= event.id %>_modal" ><%= event.title %></a>
					</div>
					<div>
						<span class="strong"><%= event.start_time.strftime('%H:%M') %></span>&nbsp; <%= event.display_location %>
					</div>
				</div>
				<%= render 'calendar/event_modal_window', :event => event %>
			<% end %>
		</div>
	<% end %>
</div>