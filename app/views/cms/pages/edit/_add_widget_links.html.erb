	<%= link_to 'Photo', new_page_widget_path(@group, @page, :widget_type => 'photo_widget', :column => column), :class => 'btn add_widget_button' %>
	<%= link_to 'Map', new_page_widget_path(@group, @page, :widget_type => 'map_widget', :column => column), :class => 'btn add_widget_button' %>
	<%= link_to 'Form', new_page_widget_path(@group, @page, :widget_type => 'form_widget', :column => column), :class => 'btn add_widget_button' %>
	<%= link_to 'Gallery', new_page_widget_path(@group, @page, :widget_type => 'gallery_widget', :column => column), :class => 'btn add_widget_button' %>
