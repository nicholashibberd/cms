<% region.panels.each do |panel| %>
	
	<%= render 'cms/pages/show/panel', :panel => panel %>
				
<% end %>
	
<% if region.flexible && show_editing_tools? %>
	<%= form_tag '/cms/pages/add_panel' do %>
			<%= hidden_field_tag 'region_id', region.id %>
			<%= submit_tag 'Add section', :class => 'btn btn-success' %>
	<% end %>
<% end %>
