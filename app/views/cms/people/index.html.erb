<h1>People</h1>

<% @people.each do |person| %>
	<div class="index_item page_index_item">
		<div class="controls">
			<%= link_to 'Edit', edit_person_path(@group, person) %>
			<%= link_to 'Delete', person_path(@group, person), :method => :delete, :confirm => 'Are you sure?' %>
		</div>
		<%= link_to person.name, edit_person_path(@group, person) %>
	</div>
<% end %>

<div class="button new_button">
	<%= link_to 'New Person', new_person_path(@group) %>
</div>
