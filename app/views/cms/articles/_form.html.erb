<%= form_for @article do |f| %>
	<%= f.hidden_field :category_id, :value => (@category ? @category.id : nil) %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_area :content, :class => "ckeditor" %>
	</div>
	<div class="field">
		<%= f.label :date %><br />
		<%= f.text_field :date, :class => 'datepicker' %>
	</div>
	<div class="field">
		<%= f.label :author %><br />
		<%= f.collection_select :person_id, Person.all, :id, :name %>
	</div>
	<div class="field">
		<% @article.comments.each do |comment| %>
			<div class="article_comment">
				<%= comment.content.html_safe %>
				<div class="comment_name">
					<%= comment.author %>					
				</div>
				<div class="controls">
					<%= link_to 'Edit', edit_article_comment_path(@institution, @article, comment) %>
				</div>
			</div>
		<% end %>
	</div>
	<div class="button confirm_button">
			<%= f.submit :submit %>
	</div>
<% end %>