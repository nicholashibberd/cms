<div class="new_instance_link">
	<%= link_to 'New Form', new_form_path(@group) %>
</div>

<h1>Forms</h1>

<div>
	<% @forms.each do |form| %>
		<div class="index_item form_index_item" id="form_<%= form.id %>">
			<div class="controls">
				<%= link_to 'View data', form_form_records_path(@group, form) %>
				<%= link_to 'Edit', edit_form_path(@group, form) %>
				<%= link_to 'Delete', form_path(@group, form), :method => :delete, :confirm => 'Are you sure?' %>
			</div>
			<%= link_to form.name, edit_form_path(@group, form) %>
		</div>
	<% end %>
</div>