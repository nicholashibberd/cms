<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <% if @user.new_record? %>
		<div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </div>
		<div class="field">
	    <%= f.label :confirm_password %><br />
	    <%= f.password_field :confirm_password %>
	  </div>
	<% end %>
  <div class="button confirm_button">
    <%= f.submit %>
  </div>
<% end %>
