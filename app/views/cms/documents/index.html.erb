<h1>Documents</h1>

<div>
	<% @documents.each do |document| %>
		<div class="index_item document_index_item" id="document_<%= document.id %>">
			<div class="controls">
				<%= link_to 'View', document_path(@group, document) %>
				<%= link_to 'Edit', edit_document_path(@group, document) %>
				<%= link_to 'Delete', document_path(@group, document), :method => :delete, :confirm => 'Are you sure?' %>
			</div>
			<%= link_to document.title, edit_document_path(@group, document) %>
		</div>
	<% end %>
</div>

<div class="button new_button">
	<%= link_to 'New Document', new_document_path(@group) %>
</div>
