<%= form_for @document, {:html => {:multipart => true}}.merge(form_action_path(@group, @document)) do |f| %>
	<%= f.hidden_field :group_id, :value => @document.group_id ||= @group_id %>	
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :document %>
		<%= f.file_field :pdf %>
	</div>  
	<div class="button confirm_button">
  	<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end -%>