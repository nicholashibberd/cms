<div class="modal hide fade in" id="event_<%= event.id %>_modal" style="display: none;">
  <div class="modal-header">
      <a class="close" data-dismiss="modal" href="#">Ã—</a>
      <h3><%= event.title %></h3>
  </div>
  <div class="modal-body">
		<p>
		  <b>Location</b>
			<%= event.display_location %>
		</p>
		<p>
		  <b>Starts at:</b>
			<%= l event.start_time, :format => :long %>
		</p>
		<p>
		  <b>Description:</b>
		  <%= raw event.content %>
		</p>
  </div>
  <div class="modal-footer">
			<a class="btn" data-dismiss="modal">Close</a>
  </div>	
</div>
