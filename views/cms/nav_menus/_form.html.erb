<%= form_for @nav_menu do |f| %>
	<%= f.hidden_field :group_id, :value => @nav_menu.group_id ||= @group_id %>	
	<div class="field">
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>
	<div class="field">
	  <%= f.label :menu_type %>
	  <%= f.select :menu_type, options_for_select([['Admin', 'admin'],['Main Nav', 'main_nav'], ['Footer', 'footer']]) %>
	</div>

  <div class="button confirm_button">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<% end %>
