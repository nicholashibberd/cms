<%= form_for @category do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
	<div class="field">
    <%= f.label :homepage %><br />
		<%= f.select :homepage_id, options_from_collection_for_select(Page.all, :id, :name, @category.homepage_id) %>
	</div>
  <div class="button confirm_button">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<% end %>
